# Server Configuration
PORT=3000
NODE_ENV=development

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=shopify-analytics-producer
KAFKA_GROUP_ID=shopify-analytics-group

# Shopify Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here
SHOPIFY_SCOPES=read_orders,read_products,read_customers,read_checkouts,read_carts
SHOPIFY_API_VERSION=2025-01

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Webhook Configuration
WEBHOOK_PATH=/webhooks/shopify
WEBHOOK_TIMEOUT=30000

# Kafka Topics Configuration
TOPIC_PREFIX=shopify-analytics
TOPIC_PARTITIONS=3
TOPIC_REPLICATION_FACTOR=1
